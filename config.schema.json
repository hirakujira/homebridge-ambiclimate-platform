{
  "pluginAlias": "AmbiClimatePlatform",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "clientId": {
        "title": "Client ID",
        "type": "string",
        "required": true,
        "pattern": "^([A-Fa-f0-9]{8})-([A-Fa-f0-9]{4})-([A-Fa-f0-9]{4})-([A-Fa-f0-9]{4})-([A-Fa-f0-9]{12})$"
      },
      "clientSecret": {
        "title": "Client Secret",
        "type": "string",
        "required": true,
        "pattern": "^([A-Fa-f0-9]{8})-([A-Fa-f0-9]{4})-([A-Fa-f0-9]{4})-([A-Fa-f0-9]{4})-([A-Fa-f0-9]{12})$"
      },
      "username": {
        "title": "User Name",
        "type": "string",
        "required": true
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true
      },
      "showFeedbacks": {
        "title": "Show Feedbacks",
        "type": "boolean",
        "default": false,
        "description": "Show comfortable mode feedbacks as switches"
      },
      "heaterCoolerMode": {
        "title": "Heater Cooler Mode",
        "type": "boolean",
        "default": false,
        "description": "Show device as heater cooler (air condition). Please read README.md to get more infomation."
      },
      "accessories": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "roomName": {
              "title": "Room Name",
              "type": "string",
              "required": true
            },
            "locationName": {
              "title": "Location Name",
              "type": "string",
              "required": true
            }
          }
        }
      }
    }
  }
}